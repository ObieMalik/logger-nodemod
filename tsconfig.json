{
	"compileOnSave": true,
	"compilerOptions": {
		"sourceMap": true,
		"inlineSources": true,
		"noImplicitAny": true,
		"target": "es6",
		"module": "commonjs",
		"experimentalDecorators": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "."
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules/**"
	]
}