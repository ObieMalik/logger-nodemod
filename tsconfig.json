{
	"compileOnSave"  : true,
	"compilerOptions": {
		"sourceMap"    : true,
		"inlineSources": true,
		"noImplicitAny": true,
		"target"       : "es6",
		"module"       : "commonjs",
		"experimentalDecorators": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include"        : [
		"src/**/*.ts"
	],
	"exclude"        : [
		"node_modules/**"
	]
}
